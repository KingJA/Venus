<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="KJProgress">
        <attr name="progress" format="integer" />
        <attr name="progressMax" format="integer" />
        <attr name="reachWidth" format="dimension" />
        <attr name="reachColor" format="color|reference" />
        <attr name="unreachColor" format="color|reference" />
        <attr name="unreachWidth" format="dimension" />
        <attr name="progressTextSize" format="dimension" />
        <attr name="progressTextColor" format="color|reference" />
        <attr name="progressTextMargin" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="scaleWidth" format="dimension" />
        <attr name="scaleLength" format="dimension" />
        <attr name="scaleNum" format="integer" />
        <attr name="strokeCap">
            <flag name="square" value="0" />
            <flag name="round" value="1" />
        </attr>

        <attr name="progressStyle">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
        <attr name="scaleCap">
            <flag name="square" value="0" />
            <flag name="circle" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_linearProgress" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MaterialProgress">
        <attr name="progressRadius" format="dimension" />
        <attr name="progressColor" format="color|reference" />
        <attr name="progressWidth" format="dimension" />
        <attr name="spinSpeed" format="float" />
        <attr name="cycleStyle">
            <flag name="square" value="0" />
            <flag name="circle" value="1" />
        </attr>
    </declare-styleable>

</resources>